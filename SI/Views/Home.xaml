<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SI.Views.Home"
             Title="Home">
    <VerticalStackLayout>
        <Image x:Name="foto" WidthRequest="200" HeightRequest="200" BackgroundColor="Gray"/>
        <Button x:Name="btnfoto" Text="Tomar Foto" 
                Clicked="btnfoto_Clicked"
                Margin="50,20,50,20"/>

            <Entry x:Name="identidad"
           Placeholder="Identidad"
           Keyboard="Text"
           TextColor="Black"
           PlaceholderColor="Black"
           HeightRequest="50"/> 

            <Entry x:Name="Nombre"
           Placeholder="Nombre Completo"
           Keyboard="Text"
           TextColor="Black"
           PlaceholderColor="Black"
           HeightRequest="50"/>

            <DatePicker x:Name="fechaing"
                Format="d"
                Background="White"
                TextColor="Black"/>

            <Entry x:Name="Puesto"
           Placeholder="Puesto"
           Keyboard="Text"
           TextColor="Black"
           PlaceholderColor="Black"
           HeightRequest="50"/>

            <Entry x:Name="Correo"
           Placeholder="Correo del Empleado"
           Keyboard="Email"
           TextColor="Black"
           PlaceholderColor="Black"
           HeightRequest="50"/>

            <Button x:Name="btnagregar"
            Clicked="btnagregar_Clicked"
            Text="Agregar Empleado"
            Margin="50,20,50,20"    
            CornerRadius="50"
            HeightRequest="50"
        FontAttributes="Bold"/>
    </VerticalStackLayout>
</ContentPage>